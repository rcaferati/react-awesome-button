{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",

    "jsx": "react-jsx",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],

    "allowJs": true,
    "checkJs": false,

    "declaration": true,

    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*"
  ]
}
